{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 col-12 mx-auto">
            <form method="post" class="border shadow text-center p-2">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">{{ 'login.title'|trans }}</h1>
                <label for="inputEmail" class="sr-only">{{ 'login.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       placeholder="Email" required autofocus>
                <label for="inputPassword" class="sr-only">{{ 'login.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password"
                       required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-lg btn-primary mt-3" type="submit">
                    {{ 'login.signin'|trans }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}
