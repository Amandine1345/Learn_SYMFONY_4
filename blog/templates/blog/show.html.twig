{% extends 'base.html.twig' %}

{% block title %}{{ slug }} - {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <a role="button" class="btn btn-secondary" href="{{ path('blog_index') }}">
            Back to articles list.
        </a>
    </div>
    <div class="mt-3">
        <h1 class="text-center">{{ article.title }}</h1>
        <h6>Category : {{ article.category.name }}</h6>
        <strong>Tags :</strong>
            {% for tag in article.tags %}
                <span class="badge badge-secondary">{{ tag.name }} </span>
            {% else %}
                No tags for this article
            {% endfor %}
        <p class="text-right">
            {% if is_granted('ROLE_AUTHOR') %}
                <a href="{{ path('article_edit', { 'id': article.id} ) }}">Ã‰diter</a>
            {%endif%}
        </p>
        <hr>
        <p>{{ article.content }}</p>
        <p class="text-right">
            Written by : {{ article.author.email }}
        </p>
    </div>
{% endblock %}