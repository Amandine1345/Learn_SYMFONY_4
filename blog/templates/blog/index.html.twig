{% extends 'base.html.twig' %}

{% block title %}All articles - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <a role="button" class="btn btn-secondary" href="{{ path('app_index') }}">
            Back to homepage.
        </a>
    </div>
    <div class="mt-3">
        <h1>All articles from article's table : </h1>
        {% for article in articles %}
            <div class="card mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Category : {{ article.category.name }}</h6>
                    <p class="card-text">{{ article.content }}</p>
                    <p class="text-right">
                        <a role="button" class="btn btn-success" href="{{ path('blog_show', { 'slug': article.slug }) }}">
                            Read more...
                        </a>
                    </p>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <strong>Tags :</strong>
                            {% for tag in article.tags %}
                                <span class="badge badge-secondary">{{ tag.name }} </span>
                            {% else %}
                                No tags for this article
                            {% endfor %}
                        </div>
                        <div class="col-lg-6 col-12 text-right">
                            Written by : {{ article.author.email }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            Aucun article trouv√©.
        {% endfor %}
    </div>
{% endblock %}