{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <a role="button" class="btn btn-secondary" href="{{ path('app_index') }}">
            {{ 'home.back'|trans }}
        </a>
    </div>
    <div class="mt-3">
        <h1>{{ 'blog.category.title'|trans }}: {{ category.name }} </h1>
        {% for article in articles %}
            <div class="card mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Category : {{ article.category.name }}</h6>
                    <p class="card-text">{{ article.content }}</p>
                </div>
            </div>
        {% else %}
            {{ 'article.empty'|trans }}
        {% endfor %}
    </div>
{% endblock %}