{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'field.title'|trans }}</th>
                <th>{{ 'content'|trans }}</th>
                <th>{{ 'category'|trans }}</th>
                <th>Tags</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.category.name }}</td>
                <td>
                    {% for tag in article.tags %}
                        <span class="badge-dark">{{ tag.name }}</span>
                    {% else %}
                        No tags
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no.results'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">{{ 'create-new'|trans }}</a>
{% endblock %}
