<form method="post" action="{{ path('tag_delete', {'id': tag.id}) }}" onsubmit="return confirm({{ 'delete.confirmation'|trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn">{{ 'delete'|trans }}</button>
</form>
