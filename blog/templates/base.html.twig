<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Blog Amandine{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    {% include '_navbar.html.twig' %}
</header>

<div class="container">
    <!-- FLASH MESSAGE -->
    {% if app.flashes is defined %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="row">
                    <div class="col-lg-6 mx-auto alert alert-dismissible alert-{{ label }} flash-{{ label }} fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
    <!-- // -->

    <div class="row">
        <div class="col-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://kit.fontawesome.com/f62deca48c.js"></script>
{% endblock %}
</body>
</html>
