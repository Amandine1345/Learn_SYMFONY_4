{% extends 'base.html.twig' %}

{% block title %}{{ slug }} - {{ parent() }}{% endblock %}

{% block body %}
    <div>
        <a role="button" class="btn btn-secondary" href="{{ path('app_index') }}">
            Back to homepage.
        </a>
    </div>
    <div class="mt-3">
        <h1 class="text-center">{{ article.title }}</h1>
        <h6>Category : {{ article.category.name }}</h6>
        <strong>Tags :</strong>
            {% for tag in article.tags %}
                <span class="badge badge-secondary">{{ tag.name }} </span>
            {% else %}
                No tags for this article
            {% endfor %}
        <hr>
        <p>{{ article.content }}</p>
    </div>
{% endblock %}